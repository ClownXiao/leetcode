public class Solution {
    public boolean isMatch(String s, String p) {
        
        if(p.length() > 0 && p.charAt(0) == '*')
            return false;
        int l1 = s.length(), l2 = p.length();
        boolean[][] dp = new boolean[l1+1][l2+1];
        dp[0][0] = true;
        
        for(int i = 1; i < l2; i++){
            if(p.charAt(i) == '*')
                dp[0][i+1] = dp[0][i-1];
        }
        
        for(int i = 0; i < l1; i++){
            char c1 = s.charAt(i);
            for(int j = 0; j < l2; j++){
                char c2 = p.charAt(j);
                if(c2 != '*'){
                    dp[i+1][j+1] = dp[i][j] && match(c1, c2);
                }
                else{
                    dp[i+1][j+1] = dp[i+1][j-1] || (dp[i][j+1] && match(s.charAt(i), p.charAt(j-1)));
                }
            }
        }
        return dp[l1][l2];
    }
    
    public boolean match(char a, char b){
        return b == '.' || a == b;
    }
}
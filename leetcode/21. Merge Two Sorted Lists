/**
 * Definition for singly-linked list.
 * public class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode(int x) { val = x; }
 * }
 */
public class Solution {
    public ListNode mergeTwoLists(ListNode l1, ListNode l2) {
        ListNode i = l1;
        ListNode j = l2;
        ListNode start = new ListNode(0);
        ListNode k = start;
        while(i != null && j != null){
            if(i.val < j.val){
                k.next = i;
                i = i.next;
            }
            else{
                k.next = j;
                j = j.next;
            }
            k = k.next;
        }
        while(i != null){
            k.next = i;
                i = i.next;
                k = k.next;
        }
        while(j != null){
            k.next = j;
                j = j.next;
                k = k.next;
        }
        return start.next;
    }
}
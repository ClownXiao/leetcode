public class Solution {
    public int myAtoi(String str) {
        if(str.length() == 0) return 0;
        
        int sign = 0;
        long res = 0;
        int i = 0;
        char c = str.charAt(0) ;
        while(c == ' '){
            i++;
            c = str.charAt(i);
        }
        if(c == '+')
            sign = 1;
        else if(c == '-')
            sign = -1;
        else if(c >= '0' &&c <= '9'){
            sign = 1;
            res = c - '0';
        }
        else
            return 0;
        for(i++; i < str.length(); i++){
            c = str.charAt(i);
            
            if(c >= '0' &&c <= '9'){
                res = 10 * res + c - '0'; 
                //System.out.println(res);
                if(res > Integer.MAX_VALUE){
                if(sign == 1)
                    return Integer.MAX_VALUE;
                else if(sign == -1)
                    return Integer.MIN_VALUE;
            }
            }
            else 
                break;
        }
        res = res * sign;
        return  (int)res;
    }
}